<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.kodokode">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/kodokode_circle"
        android:label="@string/app_name"
        android:roundIcon="@drawable/kodokode_circle"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".MyLoginActivity"
            android:parentActivityName=".MainActivity"/>

        <activity android:name=".ui.login.CreateAccountActivity"
            android:parentActivityName=".MainActivity"/>

        <activity
            android:name=".ui.login.quizzes.StartQuiz1Activity" />

        <activity
            android:name=".ui.login.quizzes.QuestionActivity" />

        <activity android:name=".ui.login.chapters.Chapter1Activity" />

        <activity
            android:name=".AssessmentSection" />

        <activity
            android:name=".LearningSection" />

        <activity android:name=".UserProfileActivity" />

        <activity android:name=".LeaderboardActivity" />

        <activity
            android:name=".HomeActivity"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>