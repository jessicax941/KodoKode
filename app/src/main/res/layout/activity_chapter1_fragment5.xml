<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/chapter1fragment5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Additional information"
                style="@style/contentTitleStyle" />

            <TextView
                android:id="@+id/body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Python allows for chained assignment."
                style="@style/contentBodyStyle"
                android:textStyle="bold"
                android:layout_below="@+id/title1" />

            <TextView
                android:id="@+id/eg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Example"
                style="@style/contentExampleTitleStyle"
                android:layout_below="@+id/body1"/>

            <TextView
                android:id="@+id/eg2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="a = b = c = 10\na, b and c are all integer variables and all of them have values 10."
                style="@style/contentBodyStyle"
                android:layout_below="@+id/eg1" />

            <TextView
                android:id="@+id/body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Variable names must start with a letter."
                style="@style/contentBodyStyle"
                android:textStyle="bold"
                android:layout_below="@+id/eg2" />

            <TextView
                android:id="@+id/eg3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Example"
                style="@style/contentExampleTitleStyle"
                android:layout_below="@+id/body2"/>

            <TextView
                android:id="@+id/eg4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="valid variable name: height_1\ninvalid variable name: 1_height"
                style="@style/contentBodyStyle"
                android:layout_below="@+id/eg3" />

            <TextView
                android:id="@+id/body3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. Some words in Python are reserved as keywords and cannot be used as variable names."
                style="@style/contentBodyStyle"
                android:textStyle="bold"
                android:layout_below="@+id/eg4" />

            <TextView
                android:id="@+id/eg5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Example"
                style="@style/contentExampleTitleStyle"
                android:layout_below="@+id/body3"/>

            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_below="@+id/eg5"
                android:layout_margin="10dp"
                app:srcCompat="@drawable/python_keywords" />

            <TextView
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image"
                android:layout_centerHorizontal="true"
                android:text="5/5"
                android:fontFamily="@font/varela_round_regular"
                android:textColor="#000" />

            <LinearLayout
                android:id="@+id/arrows"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/count">

                <ImageButton
                    android:id="@+id/left_arrow_button"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_launcher_left_arrow_background"
                    android:tint="@color/colorPrimary"
                    android:background="@color/DefaultWhite"/>

                <ImageButton
                    android:id="@+id/right_arrow_button"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_launcher_right_arrow_foreground"
                    android:tint="@color/LightGrey"
                    android:background="@color/DefaultWhite"/>

            </LinearLayout>

            <android.support.design.button.MaterialButton
                android:id="@+id/go_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/arrows"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:text="Click to complete chapter"
                android:textAllCaps="false"
                android:textColor="@color/White"
                android:backgroundTint="@color/colorPrimary"
                android:textSize="15sp"
                />

            <View
                android:id="@+id/divider"
                android:layout_width="390dp"
                android:layout_height="2dp"
                android:layout_below="@+id/eg2"
                android:layout_centerHorizontal="true"
                android:background="@color/LightGrey" />

            <View
                android:id="@+id/divider2"
                android:layout_width="390dp"
                android:layout_height="2dp"
                android:layout_below="@+id/eg4"
                android:layout_centerHorizontal="true"
                android:background="@color/LightGrey" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>